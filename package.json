{
  "name": "kraland-css",
  "version": "1.0.0",
  "description": "Kraland Red Theme",
  "scripts": {
    "build": "node build.js",
    "watch": "nodemon --watch kraland-theme.css --watch kraland-userscript-template.js --exec \"npm run build\"",
    "serve": "http-server -p 4848 --cors -c-1",
    "test:e2e": "npx playwright test --project=chromium"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1",
    "playwright": "^1.51.0"
  }
}

